<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddWordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="top|center">
        <EditText
            android:id="@+id/the_new_word"
            android:layout_marginTop="10sp"
            android:text=""
            android:hint="Type the new word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/the_new_definition"
            android:layout_marginVertical="10sp"
            android:text=""
            android:hint="Type the new definition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:text="Add this word"
            android:onClick="addThisWordClick"
            android:layout_marginTop="10sp"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>